{
	"compilerOptions": {
		"outDir": "build",
		"target": "esnext",
    "module": "commonjs",
		"lib": ["es6"],
		"sourceMap": true,
		"allowJs": false,
		"jsx": "react-native",
		"noEmit": false,
		"isolatedModules": true,
		"declaration": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
	},
	"exclude": ["node_modules", "build", "src/__tests__"],
	"include": ["src/**/*"]
}
